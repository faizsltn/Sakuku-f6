<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sakuku - Elegant Edition</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-light: #f4f7fa; 
            --card-white: #ffffff;
            --primary-blue: #0ea5e9;
            --accent-yellow: #fbbf24;
            --text-dark: #334155;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Poppins', sans-serif;
            color: var(--text-dark);
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;
            position: relative;
        }

        /* Container Animasi Uang Jatuh */
        .money-rain {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .money {
            position: absolute;
            width: 60px; /* Ukuran uang kertas */
            height: 30px;
            background-size: contain;
            background-repeat: no-repeat;
            opacity: 0.7;
            animation: fall linear infinite;
        }

        @keyframes fall {
            0% { transform: translateY(-100px) rotate(0deg); opacity: 0; }
            10% { opacity: 0.7; }
            90% { opacity: 0.7; }
            100% { transform: translateY(110vh) rotate(360deg); opacity: 0; }
        }

        /* Hero Section sesuai gambar */
        .hero-section {
            padding: 50px 0;
            text-align: center;
            background: transparent;
        }

        .hero-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .money-bag {
            width: 60px; /* Ukuran ikon kantong uang */
            height: auto;
        }

        .hero-title {
            font-weight: 800;
            font-size: 3.5rem;
            color: #b45309; /* Warna cokelat sesuai gambar */
            margin: 0;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: #475569;
            margin-top: 10px;
        }

        /* Desain Card */
        .organic-card {
            background: var(--card-white);
            border: none;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.05);
            border-top: 5px solid var(--accent-yellow);
        }

        .form-label { font-weight: 600; font-size: 0.9rem; }

        .btn-organic {
            background-color: var(--accent-yellow);
            color: #000;
            border: none;
            border-radius: 10px;
            padding: 12px 35px;
            font-weight: 700;
            transition: 0.3s;
        }

        .btn-organic:hover {
            background-color: #f59e0b;
            transform: scale(1.05);
        }

        /* Tabel Pengeluaran */
        .table-container {
            border-radius: 15px;
            overflow: hidden;
            background: var(--card-white);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }

        .table thead th {
            background-color: #f8fafc;
            color: #64748b;
            padding: 15px;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
        }

        .badge-category {
            background-color: #fef3c7;
            color: #92400e;
            padding: 6px 12px;
            border-radius: 8px;
            font-weight: 600;
        }

        .btn-edit { background-color: var(--accent-yellow); color: #000; border: none; font-weight: 600; }
        .btn-hapus { background-color: #ef4444; color: #fff; border: none; font-weight: 600; }

    </style>
</head>
<body>

    <div class="money-rain" id="moneyRain"></div>

    <div class="container">
        <div class="hero-section">
            <div class="hero-container">
                <img src="https://cdn-icons-png.flaticon.com/512/2489/2489756.png" class="money-bag" alt="bag">
                <h1 class="hero-title">Sakuku</h1>
                <img src="https://cdn-icons-png.flaticon.com/512/2489/2489756.png" class="money-bag" alt="bag">
            </div>
            <p class="hero-subtitle">Kelola Keuangan dengan Efisien</p>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <div class="card organic-card">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Tambah Transaksi Baru</h5>
                        <form action="/add" method="POST" class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Nominal (Rp)</label>
                                <input type="number" name="nominal" class="form-control" placeholder="50000" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Kategori</label>
                                <input type="text" name="nama_kategori" class="form-control" placeholder="Makan, Main, dll" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Tanggal</label>
                                <input type="date" name="tanggal" class="form-control" required>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label">Keterangan Singkat</label>
                                <input type="text" name="keterangan" class="form-control" placeholder="Belanja bulanan...">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Metode Pembayaran</label>
                                <select name="metode_pembayaran" class="form-select">
                                    <option value="Cash">Cash / Tunai</option>
                                    <option value="Bank/Transfer">Transfer Bank</option>
                                </select>
                            </div>
                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-organic">Simpan Transaksi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center pb-5">
            <div class="col-lg-11">
                <div class="table-container">
                    <div class="p-3 fw-bold border-bottom bg-white">Riwayat Pengeluaran</div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th>Tanggal</th>
                                    <th>Kategori</th>
                                    <th>Nominal</th>
                                    <th>Metode</th>
                                    <th>Keterangan</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <% if (typeof data !== 'undefined' && data.length > 0) { %>
                                    <% data.forEach(item => { %>
                                    <tr>
                                        <td class="small text-muted"><%= item.tanggal %></td>
                                        <td><span class="badge-category"><%= item.nama_kategori %></span></td>
                                        <td class="fw-bold">Rp <%= item.nominal.toLocaleString('id-ID') %></td>
                                        <td><%= item.metode_pembayaran %></td>
                                        <td class="text-muted"><%= item.keterangan %></td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-2">
                                                <button class="btn btn-sm btn-edit px-3">Edit</button>
                                                <button class="btn btn-sm btn-hapus px-3">Hapus</button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="6" class="py-5 text-muted">Belum ada data transaksi.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const rainContainer = document.getElementById('moneyRain');
        const moneyImages = [
            'https://i.ibb.co/L6S8D7Y/uang-100rb.png', // Contoh link gambar uang 100rb
            'https://i.ibb.co/yYyNfGq/uang-50rb.png'   // Contoh link gambar uang 50rb
        ];

        function createMoney() {
            const money = document.createElement('div');
            money.classList.add('money');
            
            // Pilih gambar acak (100rb atau 50rb)
            const randomImg = moneyImages[Math.floor(Math.random() * moneyImages.length)];
            money.style.backgroundImage = `url('${randomImg}')`;
            
            // Posisi horizontal acak
            money.style.left = Math.random() * 100 + "vw";
            
            // Kecepatan jatuh acak
            money.style.animationDuration = Math.random() * 3 + 2 + "s";
            
            rainContainer.appendChild(money);

            // Hapus elemen setelah animasi selesai agar tidak membebani memori
            setTimeout(() => {
                money.remove();
            }, 5000);
        }

        // Jalankan fungsi setiap 300ms
        setInterval(createMoney, 300);
    </script>
</body>
</html>